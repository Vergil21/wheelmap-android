<resources xmlns:android="http://schemas.android.com/apk/res/android"
        >

    <style name="DetailView">


    </style>

    <style name="TitleBarNew">
        <item name="android:id">@id/title_container</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/shape_title_plain</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
    </style>

    <style name="TitleBarNew.SingleLine">
        <!-- item name="android:layout_height">@dimen/title_height_single</item -->
    </style>

    <style name="TitleBarNew.DualLine">
        <!-- item name="android:layout_height">@dimen/title_height_dual</item -->
    </style>

    <style name="TitleBarNew.DualLine.WithIcon">
        <item name="android:orientation">@null</item>
    </style>

    <style name="TitleBarTextNew">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TitleBarTextNew.Title" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:id">@id/titlebar_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TitleBarTextNew.Subtitle" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:id">@id/titlebar_subtitle</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="IconSmall">
        <item name="android:id">@id/image</item>
        <item name="android:layout_width">@dimen/icon_size_small</item>
        <item name="android:layout_height">@dimen/icon_size_small</item>
    </style>

    <style name="IconMedium">
        <item name="android:id">@id/image</item>
        <item name="android:layout_width">@dimen/icon_size_medium</item>
        <item name="android:layout_height">@dimen/icon_size_medium</item>
    </style>

    <style name="IconLarge">
        <item name="android:id">@id/image</item>
        <item name="android:layout_width">@dimen/icon_size_large</item>
        <item name="android:layout_height">@dimen/icon_size_large</item>
    </style>

    <style name="DetailFontNew" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
    </style>

    <style name="DetailFontNew.Editable">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Scrollable">
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="Scrollable.View">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingRight">@dimen/margin_huge</item>
        <item name="android:paddingLeft">@dimen/margin_huge</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="Scrollable.List">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <!--<item name="android:paddingRight">@dimen/margin_large</item>
        <item name="android:paddingLeft">@dimen/margin_large</item>      -->
    </style>

    <style name="Container.ListItem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_height">?android:attr/listPreferredItemHeight</item>-->
        <item name="android:paddingRight">@dimen/padding_small</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
    </style>

    <style name="Container" parent="@style/Theme.wheelmap">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Container.Content">
        <item name="android:layout_marginRight">@dimen/margin_huge</item>
        <item name="android:layout_marginBottom">@dimen/margin_vertical_section</item>
        <item name="android:layout_marginLeft">@dimen/margin_huge</item>
        <item name="android:layout_marginTop">@dimen/margin_vertical_section</item>
    </style>

    <style name="Container.ScrollviewContent">
        <item name="android:paddingBottom">@dimen/margin_vertical_section</item>
        <item name="android:paddingTop">@dimen/margin_vertical_section</item>
    </style>

    <style name="Container.WheelStateSelect">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="Container.Pressable">

        <item name="android:background">@drawable/item_pressable_background</item>
    </style>

    <style name="IconLarge.WheelStateSelect">

        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="FontWheelStateSelect" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- item name="android:layout_marginLeft">@dimen/margin_small</item -->
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/margin_small</item>
    </style>

    <style name="RadioButtonWheelStateSelect">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="FontLegalNoticeTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <style name="FontLegalNoticeItem" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="WheelStateItem">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="FontSectionTitle" parent="@android:style/TextAppearance.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="WheelStateCheckableText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="Widget.PullToRefresh.ProgressBar.Horizontal.Center"
           parent="android:Widget.ProgressBar.Horizontal">
        <!--<item name="android:progressDrawable">@drawable/ptr_progress_horizontal_holo_center</item>-->
        <item name="android:progressDrawable">@drawable/progress_bg_wheelmap</item>
        <item name="android:indeterminateDrawable">
            @drawable/progress_bg_wheelmap
            <!--@drawable/ptr_progress_indeterminate_horizontal_holo-->
        </item>
        <item name="android:minHeight">4dip</item>
        <item name="android:maxHeight">4dip</item>
    </style>

</resources>